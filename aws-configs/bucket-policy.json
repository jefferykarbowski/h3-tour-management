{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowPublicReadTourFiles",
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::h3-tour-files-h3vt/tours/*"
        },
        {
            "Sid": "DenyDirectAccessToUploads",
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:GetObject",
            "Resource": [
                "arn:aws:s3:::h3-tour-files-h3vt/uploads/*",
                "arn:aws:s3:::h3-tour-files-h3vt/temp/*"
            ]
        },
        {
            "Sid": "RequireSSLRequestsOnly",
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::h3-tour-files-h3vt",
                "arn:aws:s3:::h3-tour-files-h3vt/*"
            ],
            "Condition": {
                "Bool": {
                    "aws:SecureTransport": "false"
                }
            }
        }
    ]
}