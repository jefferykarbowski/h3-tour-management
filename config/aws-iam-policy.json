{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "H3TMTourUploadsOnly",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:PutObjectAcl"
            ],
            "Resource": [
                "arn:aws:s3:::YOUR_BUCKET_NAME/tours/*"
            ],
            "Condition": {
                "StringEquals": {
                    "s3:x-amz-content-sha256": "UNSIGNED-PAYLOAD"
                },
                "NumericBetween": {
                    "s3:max-keys": ["1", "1000"]
                },
                "StringLike": {
                    "s3:x-amz-content-type": [
                        "application/zip",
                        "application/x-zip-compressed",
                        "multipart/x-zip"
                    ]
                }
            }
        },
        {
            "Sid": "H3TMTourDownloads",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::YOUR_BUCKET_NAME/tours/*"
            ]
        },
        {
            "Sid": "H3TMTourListing",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::YOUR_BUCKET_NAME"
            ],
            "Condition": {
                "StringLike": {
                    "s3:prefix": [
                        "tours/*"
                    ]
                },
                "NumericLessThan": {
                    "s3:max-keys": "1000"
                }
            }
        },
        {
            "Sid": "H3TMBucketAccess",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketLocation",
                "s3:HeadBucket"
            ],
            "Resource": [
                "arn:aws:s3:::YOUR_BUCKET_NAME"
            ]
        },
        {
            "Sid": "DenyDangerousOperations",
            "Effect": "Deny",
            "Action": [
                "s3:DeleteBucket",
                "s3:DeleteBucketPolicy",
                "s3:PutBucketPolicy",
                "s3:PutBucketAcl",
                "s3:PutBucketCors",
                "s3:PutBucketWebsite",
                "s3:PutBucketLogging",
                "s3:PutBucketVersioning"
            ],
            "Resource": "*"
        },
        {
            "Sid": "DenyRootAccess",
            "Effect": "Deny",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::YOUR_BUCKET_NAME",
                "arn:aws:s3:::YOUR_BUCKET_NAME/*"
            ],
            "Condition": {
                "StringNotLike": {
                    "s3:prefix": [
                        "tours/*"
                    ]
                }
            }
        }
    ]
}