{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams"
      ],
      "Resource": [
        "arn:aws:logs:*:*:log-group:/aws/lambda/h3-tour-processor-*",
        "arn:aws:logs:*:*:log-group:/aws/lambda/h3-tour-processor-*:*"
      ]
    },
    {
      "Sid": "S3BucketOperations",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:GetBucketVersioning",
        "s3:GetBucketNotification"
      ],
      "Resource": "arn:aws:s3:::h3-tour-files-h3vt"
    },
    {
      "Sid": "S3ObjectRead",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:GetObjectVersion",
        "s3:GetObjectTagging"
      ],
      "Resource": [
        "arn:aws:s3:::h3-tour-files-h3vt/uploads/*",
        "arn:aws:s3:::h3-tour-files-h3vt/temp/*",
        "arn:aws:s3:::h3-tour-files-h3vt/failed/*",
        "arn:aws:s3:::h3-tour-files-h3vt/processed/*"
      ]
    },
    {
      "Sid": "S3ObjectWrite",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:PutObjectTagging"
      ],
      "Resource": [
        "arn:aws:s3:::h3-tour-files-h3vt/tours/*",
        "arn:aws:s3:::h3-tour-files-h3vt/temp/*",
        "arn:aws:s3:::h3-tour-files-h3vt/failed/*",
        "arn:aws:s3:::h3-tour-files-h3vt/processed/*"
      ]
    },
    {
      "Sid": "S3ObjectMove",
      "Effect": "Allow",
      "Action": [
        "s3:DeleteObject",
        "s3:CopyObject"
      ],
      "Resource": [
        "arn:aws:s3:::h3-tour-files-h3vt/uploads/*",
        "arn:aws:s3:::h3-tour-files-h3vt/temp/*",
        "arn:aws:s3:::h3-tour-files-h3vt/failed/*",
        "arn:aws:s3:::h3-tour-files-h3vt/processed/*"
      ]
    },
    {
      "Sid": "SNSNotifications",
      "Effect": "Allow",
      "Action": [
        "sns:Publish"
      ],
      "Resource": "arn:aws:sns:*:*:h3-tour-processing-alerts-*"
    },
    {
      "Sid": "CloudWatchMetrics",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:PutMetricData"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "cloudwatch:namespace": "H3TourProcessing"
        }
      }
    }
  ]
}