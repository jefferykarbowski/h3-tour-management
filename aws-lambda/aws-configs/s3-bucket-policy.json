{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PublicReadToursOnly",
      "Effect": "Allow",
      "Principal": "*",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::h3-tour-files-h3vt/tours/*",
      "Condition": {
        "StringEquals": {
          "s3:ExistingObjectTag/public": "true"
        }
      }
    },
    {
      "Sid": "LambdaFunctionAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT-ID:role/h3-tour-processor-lambda-role-*"
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:CopyObject",
        "s3:PutObjectTagging",
        "s3:GetObjectTagging"
      ],
      "Resource": [
        "arn:aws:s3:::h3-tour-files-h3vt/uploads/*",
        "arn:aws:s3:::h3-tour-files-h3vt/tours/*",
        "arn:aws:s3:::h3-tour-files-h3vt/temp/*",
        "arn:aws:s3:::h3-tour-files-h3vt/failed/*",
        "arn:aws:s3:::h3-tour-files-h3vt/processed/*"
      ]
    },
    {
      "Sid": "LambdaBucketAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT-ID:role/h3-tour-processor-lambda-role-*"
      },
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": "arn:aws:s3:::h3-tour-files-h3vt"
    },
    {
      "Sid": "WordPressUploadAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT-ID:user/h3-tour-wordpress-user"
      },
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::h3-tour-files-h3vt/uploads/*"
    },
    {
      "Sid": "WordPressBucketList",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT-ID:user/h3-tour-wordpress-user"
      },
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::h3-tour-files-h3vt",
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "uploads/*",
            "tours/*"
          ]
        }
      }
    },
    {
      "Sid": "DenyInsecureConnections",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::h3-tour-files-h3vt",
        "arn:aws:s3:::h3-tour-files-h3vt/*"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    },
    {
      "Sid": "DenyUnencryptedUploads",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:PutObject",
      "Resource": "arn:aws:s3:::h3-tour-files-h3vt/*",
      "Condition": {
        "StringNotEquals": {
          "s3:x-amz-server-side-encryption": [
            "AES256",
            "aws:kms"
          ]
        }
      }
    }
  ]
}